<table class="table table-striped table-hover">
    <th>
    <td>Code</td>
    <td>Description</td>
    <td>Price</td>
    </th>
    <% list.forEach(item=> { %>
        <tr class="listItem" style="cursor:pointer;" item='<%= item.code %>'>
            <td></td>
            <td>
                <%= item.code %>
            </td>
            <td>
                <%= item.description %>
            </td>
            <td>
                <%= item.price %>
            </td>
        </tr>
        <% }) %>
</table>
<script type="text/javascript">
    $(function () {
        $('.listItem').click(function () {
            var code = $(this).attr('item')
            window.location.href = '/part/detail/' + code
        })
    })
</script>